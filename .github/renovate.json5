{
  "extends": [
    "config:js-lib",
    ":docker",
    "docker:pinDigests",
    "docker:enableMajor",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers",
    ":rebaseStalePrs",
    ":prHourlyLimit4",
    ":prConcurrentLimit10",
    ":maintainLockFilesWeekly",
    ":enableVulnerabilityAlerts",
    ":disableDependencyDashboard",
    "helpers:pinGitHubActionDigests",
    // "default:automergeDigest",
    "npm:unpublishSafe"
  ],
  "labels": ["dependencies"],
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "description": "Minor and patch-level updates with usually no breaking changes",
      "matchUpdateTypes": ["minor", "patch", "digest", "pin", "lockFileMaintenance"],
      "stabilityDays": 5,
      "assignees": ["busybeaver"],
      "reviewers": ["busybeaver"]
      // consider using branch auto-merging:
      // https://docs.renovatebot.com/noise-reduction/#branch-automerging
    },
    {
      "description": "Major updates with breaking changes",
      "matchUpdateTypes": ["major"],
      "stabilityDays": 7,
      "assignees": ["busybeaver"],
      "reviewers": ["busybeaver"],
      "addLabels": ["major-update"]
    }
  ]
}
