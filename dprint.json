{
  "incremental": true,

  "lineWidth": 120,
  "indentWidth": 2,
  "useTabs": false,

  "typescript": {
    "semiColons": "always",
    "quoteStyle": "alwaysSingle",
    "singleBodyPosition": "sameLine"
  },
  "json": {
  },
  "markdown": {
  },
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/state"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.62.0.wasm",
    "https://plugins.dprint.dev/json-0.14.0.wasm",
    "https://plugins.dprint.dev/markdown-0.12.1.wasm"
  ]
}
